source 'https://rubygems.org'

# Obviously need these
gem 'sinatra'
gem 'sinatra-support', :require => 'sinatra/support'
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'

# For API
gem 'json_pure'
gem 'rest-client'

# For tasks
gem 'rake'

# Development requirements
group :development do
  gem 'thin'
  gem 'sinatra-reloader'
end

# Test requirements
group :test do
  gem 'rspec'
end

# For pretty printing
gem 'awesome_print'
